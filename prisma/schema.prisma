generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                     String   @id @default(auto()) @map("_id") @db.ObjectId // ✅ إضافة @map("_id") و@db.ObjectId
  name                   String?
  email                  String   @unique
  password               String
  role                   String?  @default("user")
  emailVerified          Boolean? @default(false) // حالة التحقق من البريد الإلكتروني
  emailVerificationToken String?  // رمز التحقق المرسل إلى البريد الإلكتروني
  emailVerificationTokenCreatedAt DateTime?
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  price       Float
  imageUrl    String? // رابط صورة المنتج
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Add the opposite relation field
  cartItems  CartItem[]
}

model CartItem {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId // استخدام ObjectId
  quantity  Int      @default(1)
  product   Product  @relation(fields: [productId], references: [id]) // رابط إلى المنتج
  productId String   @db.ObjectId
}

model Order {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId // استخدام ObjectId
  status   String   @default("قيد المعالجة")
  items    Json
  total    Float
}