generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                     String   @id @default(auto()) @map("_id") @db.ObjectId // ✅ إضافة @map("_id") و@db.ObjectId
  name                   String?
  email                  String   @unique
  password               String
  role                   String?  @default("user")
  emailVerified          Boolean? @default(false) // حالة التحقق من البريد الإلكتروني
  emailVerificationToken String?  // رمز التحقق المرسل إلى البريد الإلكتروني
  emailVerificationTokenCreatedAt DateTime?
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  price       Int
  imageUrl    String
  cartItems   CartItem[]
}

model CartItem {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  productId String   @db.ObjectId
  quantity  Int
  product   Product  @relation(fields: [productId], references: [id])
}


model Order {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId // استخدام ObjectId
  status   String   @default("قيد المعالجة")
  items    Json
  total    Float
}