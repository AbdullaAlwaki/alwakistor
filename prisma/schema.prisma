generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String   @unique
  password String
  role     String   @default("user") // admin, vendor, user
}

model Product {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId // استخدام ObjectId
  name        String
  price       Float
  description String?
  image       String?   // إضافة حقل جديد لتخزين رابط الصورة
  cartItems   CartItem[] // علاقة مع عناصر السلة
}

model CartItem {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId // استخدام ObjectId
  quantity  Int      @default(1)
  product   Product  @relation(fields: [productId], references: [id]) // رابط إلى المنتج
  productId String   @db.ObjectId
}

model Order {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId // استخدام ObjectId
  status   String   @default("قيد المعالجة")
  items    Json
  total    Float
}